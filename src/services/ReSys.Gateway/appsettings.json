{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "EnableRateLimiting": false,
    "MaxRequestsPerMinute": 100,
    "EnableRequestLogging": true,
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:5174"
    ],
    "CustomHeaders": {
      "X-Gateway-Version": "1.1.0",
      "X-Powered-By": "ReSys.Gateway"
    }
  },
  "ServiceEndpoints": {
    "ApiUrl": "http://api/",
    "MlUrl": "http://ml/",
    "ShopUrl": "http://shop/",
    "AdminUrl": "http://admin/",
    "IdentityUrl": "http://identity/"
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Order": 1,
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Order": 2,
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity"
          }
        ]
      },
      "ml-route": {
        "ClusterId": "ml-cluster",
        "Order": 2,
        "Match": {
          "Path": "/ml/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/ml"
          }
        ]
      },
      "admin-route": {
        "ClusterId": "admin-cluster",
        "Order": 3,
        "Match": {
          "Path": "/admin/{**catch-all}"
        }
      },
      "shop-route": {
        "ClusterId": "shop-cluster",
        "Order": 100,
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "HttpRequest": {
          "ActivityContextPropagationSource": "DistributedContextPropagator"
        },
        "Destinations": {
          "destination1": {
            "Address": "https+http://api"
          }
        }
      },
      "ml-cluster": {
        "HttpRequest": {
          "ActivityContextPropagationSource": "DistributedContextPropagator"
        },
        "Destinations": {
          "destination1": {
            "Address": "https+http://ml"
          }
        }
      },
      "identity-cluster": {
        "HttpRequest": {
          "ActivityContextPropagationSource": "DistributedContextPropagator"
        },
        "Destinations": {
          "destination1": {
            "Address": "https+http://identity"
          }
        }
      },
      "admin-cluster": {
        "HttpRequest": {
          "ActivityContextPropagationSource": "DistributedContextPropagator"
        },
        "Destinations": {
          "destination1": {
            "Address": "https+http://admin"
          }
        }
      },
      "shop-cluster": {
        "HttpRequest": {
          "ActivityContextPropagationSource": "DistributedContextPropagator"
        },
        "Destinations": {
          "destination1": {
            "Address": "https+http://shop"
          }
        }
      }
    }
  }
}
